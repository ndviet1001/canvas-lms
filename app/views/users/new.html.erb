<%
  js_bundle :terms_of_service_modal, :registration
  css_bundle :registration
  provide :page_title, t('create_a_canvas_account', "Create a ClassOn Account")
  provide :head, include_common_stylesheets
%>


<div id="main">
  <div id="registration_header">
    <div class="registration-content">
      <!--
      <h1><a href="http://classon.edu.vn">ClassOn</a></h1>
      -->
      <%= render :partial => 'login/shared/header_logo' %>
      <a href="/login">Đăng nhập</a>
    </div>
  </div>

  <div id="registration_content">
    <div style="flex: 2; display: flex; flex-direction: column; align-items: center; justify-content: center;">
      <h2 style="font-size: 40px; line-height: 1; color: #ffffff;">Dạy thử miễn phí!</h2>
      <h2 style="font-size: 30px; line-height: 1; margin-bottom: 40px; color: #ffffff;">Dễ như ăn bánh vậy</h2>
      <% if (url = Setting.get('registration_video', nil).presence) %>
        <% js_env(:REGISTRATION_VIDEO_URL => Setting.get('registration_video_url_with_play_params', nil).presence) %>
        <h2 id="registration_video"><a href=<%= url %> title="Play the ClassOn introduction video">Watch a Video</a></h2>
      <% end %>
      <div>
        <% if (url = @domain_root_account.settings[:fft_registration_url]) %>
          <a id="signup_teacher" href=<%= url %> title="Teacher Signup">I'm a Teacher</a>
        <% else %>
          <a href="#" class="signup_link Button" data-template="teacherDialog" title="Đăng kí tài khoản" style="padding: 6px 36px; background: transparent; color: var(--ic-brand-Login-Content-password-text-color); border: 1px solid var(--ic-brand-Login-Content-password-text-color); overflow: visible;"><%= t('create_a_canvas_account', 'Đăng ký tài khoản') %></a>
        <% end %>
        <!--
        <a href="#" id="signup_student" class="signup_link" data-template="studentDialog" title="Student Signup">I'm a Student</a>
        <%= link_to_parent_signup(nil) %>
        -->

        <!--
        <form style="padding: 80px 40px 20px;" method="post" action="/users">
          <div class="control-group">
            <label class="control-label" for="teacher_name"><%= t('name', 'Name') %></label>
            <div class="controls">
              <input type="text" style="width: 100%;" id="teacher_name" name="user[name]">
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="teacher_email"><%= t('email', 'Email') %></label>
            <div class="controls">
              <input type="text" style="width: 100%;" id="teacher_email" name="pseudonym[unique_id]">
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <input type="hidden" name="user[initial_enrollment_type]" value="teacher">
              <button class="btn btn-primary" type="submit"><%= t('create_account', 'Create Account') %></button>
            </div>
          </div>
        </form>
        -->
      </div>
    </div>
    <div style="flex: 1" />
  </div>

  <div id="registration_footer">
    <div class="registration-content">
      <div>&copy; <%= Time.now.year %> <a href="http://classon.edu.vn">ClassOn</a></div>
      <div>
        <!--
        <span href="#" class="terms_of_service_link" id="terms_of_service_link"></span>
        -->
        <%= link_to t(:privacy_policy, 'Chính sách bảo mật'), privacy_policy_url %>
      </div>
    </div>
  </div>
</div>
<%= # for plugin use
    render "shared/login_trailer" %>
