<% p = asset.is_a?(Pseudonym) ? asset : asset.pseudonym %>
<% define_content :link do %>
  <%= profile_url %>
<% end %>

<% define_content :subject do %>
  <%= t :subject, "ClassOn Registration Complete" %>
<% end %>

<p><%= t :body, "You have been registered for a ClassOn account at %{account}!", :account => p.account.display_name %></p>

<a href="<%= content(:link) %>">
  <%= t :link, "Click here to access your account" %>
</a>
